<h1>Articles</h1>
<br>
<% if logged_in?  %>
  <%= link_to "Create new Article", new_article_path, class:"btn btn-primary p-1 m-2" %>
  <%= link_to "Signout",signout_path, data: { turbo_method: :delete }  %>
<% else %>
  <%= link_to "Signin", signin_path  %>
  <%= link_to "Signup", signup_path  %>
<% end %>
<br>
<ul>
  <% @article.each do |article| %>
    <li>
      <a href="<%= article_path(article) %>" class="btn btn-link">
        <%= article.title %>
      </a> : 
      <%= article.description %>
    </li>
  <% end %>
</ul>
